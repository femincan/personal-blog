---
import convertMarkdown from '@src/utils/convertMarkdown';

type Props = {
  markdown: string;
};

const { markdown } = Astro.props;

const convertedHtml = await convertMarkdown(markdown);
---

<div
  class="prose mx-auto max-w-full break-words sm:prose-lg md:prose-xl prose-pre:rounded-lg prose-pre:bg-transparent prose-pre:p-0 prose-img:mx-auto prose-img:rounded-lg"
  set:html={convertedHtml}
/>
